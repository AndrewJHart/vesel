{{#view "header" tag="header" className="bar bar-nav"}}
  <h1 class="title">Settings</h1>
{{/view}}

<div class="content s-content">
  <ul class="table-view">
  <li class="table-view-cell table-view-divider">Set your default push notification priority level</li>
    <li class="table-view-cell">
      <form class="input-group">
        <select name="global_priority" id="global_priority" class="item-select">
          <option value="1" {{#ifvalue global_priority value=1}}selected{{/ifvalue}}>Level 1: Informational</option>
          <option value="2" {{#ifvalue global_priority value=2}}selected{{/ifvalue}}>Level 2: Low-Level Emergency</option>
          <option value="3" {{#ifvalue global_priority value=3}}selected{{/ifvalue}}>Level 3: Mid-Level Emergency</option>
          <option value="4" {{#ifvalue global_priority value=4}}selected{{/ifvalue}}>Level 4: Major Emergency</option>
          <option value="5" {{#ifvalue global_priority value=5}}selected{{/ifvalue}}>Level 5: Severe</option>
        </select>
      </form>
    </li>
    <li class="table-view-cell table-view-divider">Categories</li>
    <li class="table-view-cell">
      <div class="set-police"><span class="set-title">Police</span></div>
      <div class="toggle {{#metadata.0.is_enabled}}active{{/metadata.0.is_enabled}}" data-meta-position="0">
       <div class="toggle-handle" data-meta-position="0"></div>
      </div>
    </li>

    <li class="table-view-cell">
      <div class="set-fire"><span class="set-title">Fire</span></div>
      <div class="toggle {{#metadata.1.is_enabled}}active{{/metadata.1.is_enabled}}" data-meta-position="1">
        <div class="toggle-handle" data-meta-position="1"></div>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="set-traffic"><span class="set-title">Traffic</span></div>
      <div class="toggle {{#metadata.2.is_enabled}}active{{/metadata.2.is_enabled}}" data-meta-position="2">
        <input type="checkbox" class="toggle-handle" {{#metadata.2.is_enabled}}checked{{/metadata.2.is_enabled}}>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="set-school"><span class="set-title">School</span></div>
      <div class="toggle {{#metadata.3.is_enabled}}active{{/metadata.3.is_enabled}}">
        <input type="checkbox" class="toggle-handle" {{#metadata.3.is_enabled}}checked{{/metadata.3.is_enabled}} data-meta-position="3">
      </div>
    </li>
    <li class="table-view-cell">
      <div class="set-utilities"><span class="set-title">Utilities</span></div>
      <div class="toggle {{#metadata.4.is_enabled}}active{{/metadata.4.is_enabled}}" data-meta-position="4">
        <input type="checkbox" class="toggle-handle" {{#metadata.4.is_enabled}}checked{{/metadata.4.is_enabled}}>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="set-health"><span class="set-title">Health</span></div>
      <div class="toggle {{#metadata.5.is_enabled}}active{{/metadata.5.is_enabled}}" data-meta-position="5">
        <input type="checkbox" class="toggle-handle" {{#metadata.5.is_enabled}}checked{{/metadata.5.is_enabled}}>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="set-other"><span class="set-title">Other/Misc</span></div>
      <div class="toggle {{#metadata.6.is_enabled}}active{{/metadata.6.is_enabled}}" data-meta-position="6" >
        <input type="checkbox" class="toggle-handle"{{#metadata.6.is_enabled}}checked{{/metadata.6.is_enabled}}>
      </div>
    </li>
  </ul>
  <ul class="table-view">
    <li class="table-view-cell table-view-divider">
      <p class="powered-by">
      Brought to you by: 
      <br> 
      Mountain State Computer and Network Solutions 
      <br>
      The Huntington Police Dept.</p>
    </li>
  </ul>
</div>
{{#view "footer" tag="nav" className="bar bar-tab"}}
  {{#link "intro" class="tab-item"}}
    <span class="icon icon-info"></span>
    <span class="tab-label">Help</span>
  {{/link}}
{{/view}}